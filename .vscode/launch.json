{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Launch Frontend Server",
            "type": "python",
            "request": "launch",
            "module": "http.server",
            "args": ["3000"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}